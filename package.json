{
    "name": "@suryaumapathy2812/pdf-service",
    "version": "1.2.1",
    "description": "Node JS Client for Adobe PDF-SDK",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/pdf-service.esm.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "author": "surya_umapathy",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/suryaumapathy2812/PDF-service.git"
    },
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {},
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "size-limit": [
        {
            "path": "dist/pdf-service.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/pdf-service.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^5.0.2",
        "husky": "^7.0.1",
        "size-limit": "^5.0.2",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.0",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "@adobe/pdfservices-node-sdk": "^2.0.0"
    }
}
